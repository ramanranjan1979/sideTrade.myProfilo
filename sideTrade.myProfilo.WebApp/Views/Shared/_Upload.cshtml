
@model sideTrade.myProfilo.webApp.Models.UploadFileViewModel



<button type="button" class="btn btn-info btn-lg" style="float: right;" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-upload"></span></button>


@using (Html.BeginForm("Create", "File", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.FileViewModel.ProfileId)

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog" style="border:solid 10px; border-color:#525047; border-radius:6px;">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body" style="height:100px;">
                    <ul style="list-style:none;text-align:center;">                        

                        <li>
                            <input type="file" name="fileToUpload" style="margin-left: auto;margin-right:auto;" id="file" />
                        </li>
                    </ul>

                    <div class="alert-info text-center">
                        <span id="spanUploadError" style="color:red;"></span>
                    </div>

                    <div class="form-group" style="float:right;">
                        <button type="submit" class="btn-submit" id="btnSubmitUpload" style="color: darkred;">Upload</button>
                    </div>                   

                </div>
            </div>

        </div>
    </div>
}

<script>

    $(function () {
        $('form').submit(function () {
            if (!$("form input[type=file]").val()) {                
                $("#spanUploadError").text("Please select only .CS to upload under 3 MB in Size.");
                return false;
            }
        });
    });
</script>