@model sideTrade.myProfilo.webApp.Models.ForgotPassword

@{
    ViewBag.Title = "Forgot Password?";
    Layout = "~/Views/Shared/_LayoutNoMenu.cshtml";
}



<div">
    @using (Html.BeginForm("ResetPassword", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @autocomplete = "off", ID = "FRM_BGB_FORGOTPASSWORD", @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()


                <div class="container">
                    <div class="row">
                        <div class="heading text-center col-sm-8 col-sm-offset-2">
                            <h2>Forgot your password?</h2>
                            <h6>We'll email you instructions on how to reset your password.</h6>
                        </div>
                    </div>
                    
                        <div class="row">
                            <div class="col-sm-12">
                                <form id="main-contact-form" name="contact-form" method="post" action="#">



                                    <div class="row" >

                                        <div class="col-sm-12">
                                            <div class="form-group col-sm-12">
                                                @if (TempData["ERR_Message"] != null)
                                                {
                                                    <h2 style="text-align: center;color: red;font-weight: bold;ine-height: 1.5;font-size: 13px;">@TempData["ERR_Message"]</h2>
                                                }
                                            </div>
                                        </div>


                                        <div class="col-sm-12">                                           
                                            <div class="form-group col-sm-12">
                                                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { maxlength = "50", placeholder = "Please enter your email address", @Required = "required", @class = "form-control", @style = "text-align: center;margin-left: auto;margin-right: auto;background-color:brown;color:white;", @type = "email" } })

                                            </div>

                                            <div class="form-group col-sm-12 text-center">
                                                @Html.ValidationSummary("", new { @class = "text-danger", @Style = "color:gold;" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group col-sm-12 text-center">
                                        <input type="submit" id="SubmitBtn" class="btn-submit" style="width: 50%;margin-left: auto;margin-right: auto;" value="Send me the instructions.." />
                                    </div>

                                    <div class="form-group col-sm-12" style="text-align:center;">
                                        <p style="margin-top:30px;">
                                            @Html.ActionLink("Back to Login", "Login")
                                        </p>                                                                               
                                    </div>
                                </form>
                            </div>
                        </div>
                    
                </div>
    }
</div>





<style>
    div.validation-summary-errors ul li {
        text-align: center;
        color:red;
        list-style:none;
    }
</style>









@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
