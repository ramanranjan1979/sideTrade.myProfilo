
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-content">
    <div class="row">

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12" style="margin-top:40px;text-align:center;border: solid 5px;border-color: brown;">
                            <div class="content-box-header">
                                <div class="panel-title" style="color:darkred;">RECENT PROFILE(s)</div>

                                <div class="panel-options">
                                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                                    <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                                </div>
                            </div>
                            <div class="content-box-large box-with-header">
                                @Html.Action("DashBoardNewProfile","Base")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="margin-top:40px;text-align:center;border: solid 5px;border-color: brown;width:max-content;">
                            <div class="content-box-header">
                                <div class="panel-title" style="color:darkred;">RECENT VERIFICATION(s)</div>

                                <div class="panel-options">
                                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                                    <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                                </div>
                            </div>
                            <div class="content-box-large box-with-header">
                                @Html.Action("DashBoardNewVerification", "Base")
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12" style="margin-top:40px;text-align:center;border: solid 5px;border-color: brown; width:max-content;padding-left:10px;height:587px;left:10px;">
                            <div class="content-box-header">
                                <div class="panel-title" style="color:darkred;">RECENT FILEMANAGEMENT</div>

                                <div class="panel-options">
                                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                                    <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                                </div>
                            </div>
                            <div class="content-box-large box-with-header">
                                @Html.Action("DashBoardNewFileManagement", "Base")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="margin-top:40px;text-align:center;border: solid 5px;border-color: brown;width:max-content;float:right;">
                            <div class="content-box-header">
                                <div class="panel-title" style="color:darkred;">SYSTEM HEALTH</div>

                                <div class="panel-options">
                                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                                    <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                                </div>
                            </div>
                            <div class="content-box-large box-with-header">
                                @Html.Action("DashBoardNewSysLog", "Base")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

