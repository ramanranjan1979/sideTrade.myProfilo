@model IEnumerable<sideTrade.myProfilo.webApp.Models.SystemLogViewModel>

@{
    ViewBag.Title = "System Log";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Log(s)</h2>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfileId)
        </th>

        

        <th></th>
    </tr>

    @foreach (var item in Model.OrderByDescending(x => x.CreatedOn))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LogType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ProfileId)
            </td>

            

        </tr>
    }

</table>
